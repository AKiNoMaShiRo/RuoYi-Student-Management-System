<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.affair.mapper.BoardMapper">

    <resultMap id="BoardResult" type="Board">
        <id         property="boardId"          column="board_id"></id>
        <result     property="studentId"        column="student_id"></result>
        <result     property="term"             column="term"></result>
        <result     property="address"          column="address"></result>
        <result     property="reason"          column="reason"></result>
        <result     property="connectMethod"    column="connect_method"></result>
        <result     property="status"           column="status"></result>
    </resultMap>

    <sql id="BoardVo">
        select *
        from no_borad b inner join stu_info s inner join class_info c inner join instructor_info i
        on b.student_id = s.student_id and s.class_id = c.class_id and c.instructor_id = i.instructor_id
    </sql>

    <select id="selectBoardByStuId" parameterType="String" resultMap="BoardResult">
        <include refid="BoardVo"></include>
        <where>
            1=1
            <if test="studentId != null and studentId != ''">
                and b.student_id = #{studentId}
            </if>
        </where>
        order by b.board_id desc
    </select>

    <select id="selectBoardByInsId" parameterType="String" resultMap="BoardResult">
        <include refid="BoardVo"></include>
        <where>
            1=1
            <if test="instructorId != null and instructorId != ''">
                and i.instructor_id = #{instructorId}
            </if>
        </where>
        order by b.board_id desc
    </select>

    <insert id="addBoard" parameterType="Board" useGeneratedKeys="true" keyProperty="boardId">
        insert into no_borad (
            <if test="studentId != null and studentId != ''">student_id,</if>
            <if test="term != null and term != ''">term,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="reason != null and reason != ''">reason,</if>
            <if test="connectMethod != null and connectMethod != ''">connect_method,</if>
            status
        ) values (
            <if test="studentId != null and studentId != ''">#{studentId},</if>
            <if test="term != null and term != ''">#{term},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="reason != null and reason != ''">#{reason},</if>
            <if test="connectMethod != null and connectMethod != ''">#{connectMethod},</if>
            1
        )
    </insert>

    <update id="updateBoardStatus" parameterType="Board">
        update no_borad
        <set>
            <if test="status != null">status = #{status},</if>
        </set>
        where no_borad.board_id = #{boardId}
    </update>

    <update id="updateBoard" parameterType="Board">
        update no_borad
        <set>
            <if test="term != null and term != ''">term = #{term},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="reason != null and reason != ''">reason = #{reason},</if>
            <if test="connectMethod != null and connectMethod != ''">connect_method = #{connectMethod},</if>
        </set>
        where no_borad.board_id = #{boardId}
    </update>

    <delete id="deleteBoard" parameterType="Long">
        delete from no_borad where no_borad.board_id = #{boardId}
    </delete>

</mapper>